@model IEnumerable<User>

@foreach (var item in Model)
{
    if (HRPotterUser.B2CKey == item.B2CKey)
    {
        continue;
    }
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @item.Role.ToString()
        </td>
        <td>
            <button class="btn btn-primary mx-2" onclick="toggleEditModal('@item.Id')">
                <i class="fas fa-edit pr-2"></i>
                Edit
            </button>
            <button class="btn btn-danger mx-2" onclick="toggleDeleteModal('@item.Id')">
                <i class="fas fa-trash-alt pr-2"></i>
                Delete
            </button>
        </td>
    </tr>
}

<script>
    viewModel.count(@(Model.Count() > 0 ? Model.Count() - 1 : 0));
</script>
